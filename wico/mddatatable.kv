<Nginfo_tables>
    name: "inputed_ng_info"
    title: "已录入NG信息"


    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "vertical"
            size_hint_y: 0.2

            
            #:import datetime datetime
            MDRaisedButton:
                id:date
                text:datetime.datetime.strftime(datetime.datetime.now()-datetime.timedelta(hours=8), "%Y-%m-%d")
                color:.9,.2,.1,1   #字体颜色
                size_hint_y: 0.05
                size_hint_x: 1.0
                on_release: root.show_date_picker()

            BoxLayout:
                id:lay_table
                orientation: "horizontal"
