<Nginfo_tables>
    name: "inputed_ng_info"
    title: "已录入NG信息"


    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "vertical"
            size_hint_y: 0.2

            
            #:import datetime datetime
            MDRectangleFlatButton:
                id:date
                text:datetime.datetime.strftime(datetime.datetime.now()-datetime.timedelta(hours=8), "%Y-%m-%d")
                color:.9,.2,.1,1   #字体颜色
                size_hint_y: 0.05
                size_hint_x: 1.0
                on_release: root.show_date_picker()



            FloatLayout:
                id:lay_table
                orientation: "horizontal"

                RecycleView:
                    viewclass: 'Button'
                    data: [{'text': str(x)} for x in root.data_items]
                    SelectableRecycleGridLayout:
                        cols: 10
                        default_size: None, dp(26)
                        default_size_hint: 1, None
                        size_hint: None,None
                        #cols_minimum: {0: dp(80),1: dp(50), 2: dp(150),3: dp(100), 4: dp(100), 5: dp(150), 6: dp(200), 7: dp(250), 8: dp(120), 9: dp(100)}
                        cols_minimum: {0: dp(80),1: dp(50), 2: dp(300),3: dp(200), 4: dp(200), 5: dp(130), 6: dp(200), 7: dp(250), 8: dp(120), 9: dp(100)}
                        height: self.minimum_height
                        width: self.minimum_width
                        multiselect: True
                        touch_multiselect: True
