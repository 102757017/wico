<Nginfo_tables>
    name: "inputed_ng_info"
    title: "已录入NG信息"


    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "vertical"
            size_hint_y: 0.2

            
            #:import datetime datetime
            MDRaisedButton:
                id:date
                text:datetime.datetime.strftime(datetime.datetime.now()-datetime.timedelta(hours=8), "%Y-%m-%d")
                color:.9,.2,.1,1   #字体颜色
                size_hint_y: 0.05
                size_hint_x: 1.0
                on_release: root.show_date_picker()



            FloatLayout:
                id:lay_table
                orientation: "horizontal"

                RecycleView:
                    viewclass: 'Button'
                    data: [{'text': str(x)} for x in root.data_items]
                    SelectableRecycleGridLayout:
                        cols: 9
                        default_size: None, dp(26)
                        default_size_hint: 1, None
                        size_hint: None,None
                        cols_minimum: {0: dp(50), 1: dp(300),2: dp(200), 3: dp(200), 4: dp(150), 5: dp(200), 6: dp(250), 7: dp(120), 8: dp(100)}
                        height: self.minimum_height
                        width: self.minimum_width
                        multiselect: True
                        touch_multiselect: True
