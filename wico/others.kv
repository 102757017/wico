#:import Thread threading.Thread

<Others>
    name:"others"
    title: "其它"

    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        pos_hint: {"top": 1}
        size_hint_y: 0.5

        MDLabel:
            id:content
            text: "若发现APP有bug，或有改善建议，请在此反馈"
            size_hint_x: 0.9
            size_hint_y: None
            pos_hint: {"center_x": .5}
            height: self.texture_size[1]
            halign: "left"

        TextInput:
            id: advice
            mode: "rectangle"
            size_hint_x: 0.9
            pos_hint: {"center_x": .5}

        MDBoxLayout:
            orientation: "vertical"
            adaptive_height: True
            spacing: "10dp"
            pos_hint: {"center_x": .5}
            size_hint_x: 0.9

            MDFillRoundFlatButton:
                id:submit_advice
                text: "提交建议"
                on_release: Thread(target=root.send_mail).start()


            MDFillRoundFlatButton:
                id:submit_database
                text: "同步数据库"
                on_release: Thread(target=root.async_database).start()



    BoxLayout:
        size_hint_y: 0.2 #占用20%的水平空间
        orientation: "horizontal" 
        MDLabel:
            text: "作者：何威      EMAIL:hewei@imasenwh.com"
            pos_hint: {'right': 1}
            size_hint_x: 0.9
            size_hint_y: None
            height: self.texture_size[1]
            halign: "right"
